@model IEnumerable<MVC5Course.Models.Simple1ViewModels>

@{
    ViewBag.Title = "Complex4";
}

<h2>Complex4</h2>

@using (Html.BeginForm())
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
        </tr>
        @{
            var smList = Model.ToArray();
        }

        @for (var i = 0; i < smList.Length; i++)
        {
            <tr>
                <td>
                    @Html.EditorFor(modelItem => smList[i].UserName)
                </td>
                <td>
                    @Html.EditorFor(modelItem => smList[i].Password)
                </td>
                <td>
                    @Html.EditorFor(modelItem => smList[i].Age)
                </td>
            </tr>
        }

    </table>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
}


